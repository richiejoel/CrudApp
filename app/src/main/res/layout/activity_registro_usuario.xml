<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".RegistroUsuarioActivity">

    <ImageView
        android:id="@+id/imagenRegistroAvt"
        android:layout_width="150dp"
        android:layout_height="170dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/correoRegistroAvt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/img_base"
        android:background="@drawable/circle"
        android:scaleType="centerCrop"
        />

    <EditText
        android:id="@+id/correoRegistroAvt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imagenRegistroAvt"
        app:layout_constraintBottom_toTopOf="@id/usernameRegistroAvt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="Correo"
        />

    <EditText
        android:id="@+id/usernameRegistroAvt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/correoRegistroAvt"
        app:layout_constraintBottom_toTopOf="@id/passwordRegistroAvt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="Nombre"
        />

    <EditText
        android:id="@+id/passwordRegistroAvt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/usernameRegistroAvt"
        app:layout_constraintBottom_toTopOf="@id/documentoRegistroAvt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="Contraseña"
        android:inputType="textPassword"
        />

    <EditText
        android:id="@+id/documentoRegistroAvt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/passwordRegistroAvt"
        app:layout_constraintBottom_toTopOf="@id/profesionRegistroAvt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="Documento"
        />

    <EditText
        android:id="@+id/profesionRegistroAvt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/documentoRegistroAvt"
        app:layout_constraintBottom_toTopOf="@id/btnRegistroAvt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="Profesión"
        />


    <Button
        android:id="@+id/btnRegistroAvt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profesionRegistroAvt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Crear Cuenta"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        />



</androidx.constraintlayout.widget.ConstraintLayout>